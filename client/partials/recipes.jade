md-tabs(class="md-raised md-primary" md-dynamic-height md-border-bottom)
  md-tab(label="Grains")
    .box.grains
      md-content(layout-padding layout="row" layout-sm="column")
        md-input-container
          label(for='grains') Grains
          md-select(name='grains' id='grains' ng-model='grain' required)
            md-option(ng-repeat='grain in grains | orderBy: "name"' ng-value="{{grain}}") {{grain.name}}
        md-input-container
          label(for='grainsWt') Weight(lbs.)
          input(ng-model="grain.grainWt" name="grainsWt" id="grainsWt")
        md-button(class='md-raised md-primary' ng-click='addGrains()' aria-label='Get Grains' ng-disabled='!grain || !grain.grainWt') Add Grains
        h2 {{grain.name}}
        ul
          li {{grain.flavor}}
          li {{grain.PPG}}
      table(ng-show="addedGrains.Grains.length > 0" class="grainTable")
        tr
          th Name
          th Flavor
          th Amount(lbs)
          th PPG
          th 
        tr(ng-show="addedGrain" ng-repeat="addedGrain in addedGrains.Grains track by $index")
          th {{addedGrain.name}}
          th {{addedGrain.flavor}}
          th
            md-input-container
              label(for="grainWtChng")
              input(class="grainWtChngIn" name="grainWtChng" id="grainWtChng" ng-model='addedGrain.grainWt' ng-value="{{addedGrain.grainWt}}" aria-label="weight")
          th {{addedGrain.PPG}}
          th 
            md-button(class="md-raised md-warn" ng-click="deleteItem($index, 'grain')") Remove
        tr
          th Totals
          th
          th {{addedGrains.totalWeight()}} 
          th
          th
  md-tab(label="Hops")   
    .box.hops
      md-content(layout-padding layout="row" layout-sm="column")
        md-input-container
          label(for='hops') Hops
          md-select(name'hops' id='hops' ng-model='hop' required)
            md-option(ng-repeat='hop in hops' ng-value='{{hop}}') {{hop.Name}}  
        md-input-container
          label(for='hopsWt') Weight(oz)
          input(ng-model="hop.hopWt" name="hopsWt" id="hopsWt")
        md-button(class='md-raised md-primary' ng-click='addHops()' aria-label='Get Grains' ng-disabled="!hop || !hop.hopWt") Add Hops
      md-grid-list(
        md-cols-sm="1" md-cols-md="2" md-cols-gt-md="6"
        md-row-height-gt-md="1:1" md-row-height="4:3"
        md-gutter="8px" md-gutter-gt-sm="4px")
        md-grid-tile(md-rowspan='1' md-colspan='2' md-colspan-sm="1" ng-show='addedHops' ng-repeat="addedHop in addedHops track by $index")
          h2(ng-show="addedHop.Name") {{addedHop.Name}}
          ul
            li(ng-show="addedHop.Alpha_Acid") Alpha Acid: {{addedHop.Alpha_Acid + '%'}}
            li(ng-show="addedHop.Beta_Acid") Beta Acid: {{addedHop.Beta_Acid + '%'}}
            li(ng-show="addedHop.Origin") Origin: {{addedHop.Origin}}
            li(ng-show='addedHop.hopWt') {{addedHop.hopWt + ' Ounces'}}
      md-button(class="md-raised md-warn" ng-show="addedHop" ng-click="deleteItem($index, 'hop')") Remove
      table(ng-show="addedHops.length > 0" class="hopTable")
        tr
          th Name
          th Alpha Acid
          th Beta Acid
          th Weight(oz)
          th IBUs
          th
        tr(ng-repeat="addedHop in addedHops track by $index")
          th {{addedHop.Name}}
          th {{addedHop.Alpha_Acid}}
          th {{addedHop.Beta_Acid}}
          th {{addedHop.hopWt + ' Ounces'}}
          th IBUs HERE
          th
            md-button(class="md-raised md-warn" ng-show="addedHop" ng-click="deleteItem($index, 'hop')") Remove 
    
      
  md-tab(label="Yeast")    
    .box.yeasts
      md-content(layout-padding layout="row" layout-sm="column")
        md-input-container
          label(for='yeast') Yeast
          md-select(name'yeast' id='yeast' ng-model='yeast' required)
            md-option(ng-repeat='yeast in yeasts' ng-value='{{yeast}}') {{yeast.ID + ' ' + yeast.Name}}
      .yeast(ng-show='yeast')
        h2(ng-show="yeast.ID") {{yeast.ID + ' ' + yeast.Name}}
        p(ng-show="yeast.Character") Character: {{yeast.Character}}
        p(ng-show="yeast.Flocculation") Flocculation: {{yeast.Flocculation}}
        p(ng-show="yeast.Attenuation") Avg Attenuation: {{yeast.Attenuation[1] + yeast.Attenuation[2] + '-' + yeast.Attenuation[4] + yeast.Attenuation[5] + "%"}} 
        p(ng-show="yeast.Temp_Range") Preferred Temp Range: {{yeast.Temp_Range[1] + yeast.Temp_Range[2] + '-' + yeast.Temp_Range[4] + yeast.Temp_Range[5] + " degrees F"}}
